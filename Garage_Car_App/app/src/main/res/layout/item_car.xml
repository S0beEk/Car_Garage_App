<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewBrand"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewModel"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewYear"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejestracja: ABC123"
        android:textSize="16sp"
        android:paddingTop="4dp" />
    <TextView
        android:id="@+id/textRepairDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opis naprawy"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textRepairDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data naprawy"
        android:textSize="14sp"/>
    <ImageButton
        android:id="@+id/btnDelete"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="Usuń samochód"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless" />

</LinearLayout>
